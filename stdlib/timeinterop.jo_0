now_utc : XFuture flabbergast.time.UtcNow
now_local : XFuture flabbergast.time.LocalNow

compare_list : Template {
	value : For arg : args, arg_name : Name Select arg_name : XFuture flabbergast.time.Compare
}

modify_list : Template {
	value : For arg : args, arg_name : Name Select arg_name : XFuture flabbergast.time.Modify
}

switch_zone_list : Template {
	value : For arg : args, arg_name : Name Select arg_name : XFuture flabbergast.time.SwitchZone
}

from_unix : Template {
	value : XFuture flabbergast.time.FromUnix
}

from_parts : Template {
	value : XFuture flabbergast.time.FromParts
}

days : XInvoke flabbergast.time.BaseTime getDays ()
months : XInvoke flabbergast.time.BaseTime getMonths ()
