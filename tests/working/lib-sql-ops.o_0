sql_lib : From lib:sql

test_query : Template sql_lib.offline_query {
	tables : [ { sql_from : "XXX" } ]
	columns : {
		a : expr.add {
			left : 3
			right : 4
		}
		b : expr.str_slice {
			input : "foo"
			start : 1
			length : 2
		}
	}
}

sql_stmts : {
	mssql : "SELECT (3+4) AS a, SUBSTRING(('foo'), 1, 2) AS b FROM XXX"
	mysql : "SELECT (3+4) AS a, SUBSTRING('foo' FROM 1 FOR 2) AS b FROM XXX"
	postgresql : "SELECT (3+4) AS a, SUBSTRING(E'foo' FROM 1 FOR 2) AS b FROM XXX"
	sqlite : "SELECT (3+4) AS a, SUBSTR('foo', 1, 2) AS b FROM XXX"
}

value : For provider : sql_lib.sql_providers, stmt : sql_stmts
	Reduce acc && (stmt Is Null || test_query(provider : provider) == stmt)
	With acc : True
